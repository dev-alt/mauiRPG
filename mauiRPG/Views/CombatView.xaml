<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiRPG.Views.CombatView">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Player Info -->
        <StackLayout Grid.Row="0" Padding="10">
            <Label Text="{Binding PlayerName}" FontSize="Large"/>
            <ProgressBar Progress="{Binding PlayerHealthPercentage}" />
            <Label Text="{Binding PlayerHealth, StringFormat='HP: {0}'}" />
        </StackLayout>

        <!-- Enemy Info -->
        <StackLayout Grid.Row="1" VerticalOptions="Center" Padding="10">
            <Label Text="{Binding EnemyName}" FontSize="Large"/>
            <ProgressBar Progress="{Binding EnemyHealthPercentage}" />
            <Label Text="{Binding EnemyHealth, StringFormat='HP: {0}'}" />
        </StackLayout>

        <!-- Action Buttons -->
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
            <Button Text="Attack" Command="{Binding AttackCommand}" />
            <Button Text="Defend" Command="{Binding DefendCommand}" />
            <Button Text="Use Item" Command="{Binding UseItemCommand}" />
        </StackLayout>
    </Grid>

</ContentView>
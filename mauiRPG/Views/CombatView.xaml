<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiRPG.Views.CombatView"
             xmlns:viewmodels="clr-namespace:mauiRPG.ViewModels">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Enemy Info (Top Right) -->
        <Frame Grid.Row="0" Padding="10" Margin="10" HorizontalOptions="End" VerticalOptions="Start" 
               BackgroundColor="#80FFFFFF" BorderColor="Black" CornerRadius="10">
            <StackLayout>
                <Label Text="{Binding EnemyName}" FontSize="Medium" FontAttributes="Bold"/>
                <ProgressBar Progress="{Binding EnemyHealthPercentage}" ProgressColor="Green"/>
                <Label Text="{Binding EnemyHealth, StringFormat='HP: {0}'}" FontSize="Small"/>
            </StackLayout>
        </Frame>

        <!-- Combat Area -->
        <Grid Grid.Row="1" x:Name="CombatArea">
            <!-- Player placeholder -->
            <Rectangle x:Name="PlayerPlaceholder" Fill="Blue" WidthRequest="50" HeightRequest="100"
                       HorizontalOptions="Start" VerticalOptions="Center" Margin="50,0,0,0"/>
            <!-- Enemy placeholder -->
            <Rectangle x:Name="EnemyPlaceholder" Fill="Red" WidthRequest="50" HeightRequest="100"
                       HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,50,0"/>
            <!-- Animation layer -->
            <Grid x:Name="AnimationLayer" InputTransparent="True"/>
        </Grid>

        <!-- Combat Log -->
        <ScrollView Grid.Row="1" Margin="10,120,10,10">
            <Label Text="{Binding CombatLog}" FontSize="Small" />
        </ScrollView>

        <!-- Player Info (Bottom Left) -->
        <Frame Grid.Row="2" Padding="10" Margin="10" HorizontalOptions="Start" VerticalOptions="End" 
               BackgroundColor="#80FFFFFF" BorderColor="Black" CornerRadius="10">
            <StackLayout>
                <Label Text="{Binding PlayerName}" FontSize="Medium" FontAttributes="Bold"/>
                <ProgressBar Progress="{Binding PlayerHealthPercentage}" ProgressColor="Green"/>
                <Label Text="{Binding PlayerHealth, StringFormat='HP: {0}'}" FontSize="Small"/>
            </StackLayout>
        </Frame>

        <!-- Action Buttons -->
        <Frame Grid.Row="2" Padding="10" Margin="10" HorizontalOptions="End" VerticalOptions="End" 
               BackgroundColor="#80FFFFFF" BorderColor="Black" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Text="Attack" Command="{Binding AttackCommand}" Grid.Column="0" Grid.Row="0"/>
                <Button Text="Inventory" Command="{Binding OpenInventoryCommand}" Grid.Column="1" Grid.Row="0"/>
                <Button Text="Defend" Command="{Binding DefendCommand}" Grid.Column="0" Grid.Row="1"/>
                <Button Text="Run" Command="{Binding RunCommand}" Grid.Column="1" Grid.Row="1"/>
            </Grid>
        </Frame>

        <!-- Inventory Overlay -->
        <Grid x:Name="InventoryOverlay" Grid.RowSpan="3" IsVisible="{Binding IsInventoryOpen}"
              BackgroundColor="#80000000">
            <Frame BackgroundColor="White" VerticalOptions="Center" HorizontalOptions="Center"
                   WidthRequest="300" HeightRequest="400" Padding="20">
                <StackLayout>
                    <Label Text="Inventory" FontSize="Large" HorizontalOptions="Center"/>
                    <CollectionView ItemsSource="{Binding InventoryItems}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding Name}" VerticalOptions="Center"/>
                                    <Button Text="Use" 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:CombatViewModel}}, Path=UseItemCommand}"
                                            CommandParameter="{Binding .}"
                                            Grid.Column="1"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Button Text="Close" Command="{Binding CloseInventoryCommand}" Margin="0,10,0,0"/>
                </StackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentView>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mauiRPG.Views.CharacterSelect"
             Title="Create Your Character">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">

            <Entry x:Name="NameEntry" 
                   Text="{Binding Name}" 
                   Placeholder="Enter character name" />

            <Picker Title="Select Race"
                    ItemsSource="{Binding Races}"
                    ItemDisplayBinding="{Binding .}"
                    SelectedItem="{Binding SelectedRace}" />

            <Picker Title="Select Class"
                    ItemsSource="{Binding Classes}"
                    ItemDisplayBinding="{Binding .}"
                    SelectedItem="{Binding SelectedClass}" />

            <Button Text="Create Character"
                    Command="{Binding CreateCharacterCommand}"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>